@page
@model dotnetProjects.Pages.Customers.Delete
@{
    ViewData["Title"] = "Delete";
}

<div class="mx-auto rounded border p-4 style="width: 500px;">
    <h1 class="text-center">Delete Customer</h1>
    <hr />
    <p> you sure you want to delete this customer?</p>
    <p>Customer ID=@Request.Query["id"]</p>
    <hr />
    <form method="post">
        <input type="hidden" name="id" value="@Request.Query["id"]" />
        <div class="text-center">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-page="/Customers/Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
</div>